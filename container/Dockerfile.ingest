FROM rust:alpine AS builder

RUN apk add --no-cache musl-dev openssl-dev pkgconfig build-base && \
    rustup target add x86_64-unknown-linux-musl

WORKDIR /app
COPY . .
RUN cargo build --release --target x86_64-unknown-linux-musl -p tacacs-policy-ingest

FROM alpine:latest
RUN apk add --no-cache ca-certificates
WORKDIR /app

# Non-root user
RUN adduser -D -H -s /sbin/nologin ingest
USER ingest

COPY --from=builder /app/target/x86_64-unknown-linux-musl/release/tacacs-policy-ingest /usr/local/bin/tacacs-policy-ingest
COPY crates/tacacs-policy-ingest/schemas /app/schemas

EXPOSE 8443/tcp
ENTRYPOINT ["/usr/local/bin/tacacs-policy-ingest"]
CMD ["--help"]

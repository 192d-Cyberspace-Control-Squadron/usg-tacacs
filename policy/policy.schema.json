{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["default_allow", "rules"],
  "properties": {
    "default_allow": { "type": "boolean" },
    "shell_start": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": { "type": "string" }
      }
    },
    "rules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "priority", "effect", "pattern"],
        "properties": {
          "id": { "type": "string" },
          "priority": { "type": "integer" },
          "effect": { "type": "string", "enum": ["allow", "deny"] },
          "pattern": { "type": "string" },
          "users": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    }
  }
}
